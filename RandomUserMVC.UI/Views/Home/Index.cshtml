
@model List<Model.Name>
@{
    ViewBag.Title = "Index";
    int count = Model.Count();
}

<html>
<head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>

    <div class="container" style="margin-top:30px">
        <div>
            <button style="float:right" onclick="popUpAddUser()" id="addUserButton" class="btn btn-warning">@Html.ActionLink("Add User", "AddItem", "Home")</button>
        </div>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = count - 1; i >= 0; i--)
                    {
                        <tr>
                            <th>@Model[i].Id</th>
                            <td>@Model[i].title</td>
                            <td>@Model[i].first</td>
                            <td>@Model[i].last</td>
                            <td><a style="float:right" href="/Home/UpdatePage/@Model[i].Id" class="btn btn-primary" />Analyze</td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
    @if (TempData["message"] != null)
    {
        <script type="text/javascript">
            console.log("viewmessage");
            window.onload = function () {
                swal("Add User!", "You clicked the button!", "success");
            }
        </script>
    }
</body>

</html>


